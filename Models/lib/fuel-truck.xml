<PropertyList>
	<path>fuel-truck.ac</path>
 
	<animation>
		<type>material</type>
		<object-name>front</object-name>
		<object-name>back</object-name>
		
		<condition>
			<and>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		      <greater-than>
		        <property>/sim/time/sun-angle-rad</property>
		        <value>1.22</value>
		      </greater-than>
		    </and>
		</condition>
		<emission>
		  <red>0.02</red>
		  <green>0.02</green>
		  <blue>0.02</blue>
		</emission>
	</animation>
	
	
	
	<animation>
		<type>material</type>
		<object-name>light</object-name>
	    <condition>
	      <greater-than>
	        <property>/sim/time/sun-angle-rad</property>
	        <value>1.22</value>
	      </greater-than>
	    </condition>
		<emission>
		  <red>2.0</red>
		  <green>2.0</green>
		  <blue>2.0</blue>
		</emission>
	</animation>
	
	
		
</PropertyList>
