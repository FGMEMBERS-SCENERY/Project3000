<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>

  <path>zurich_SR_Technics_werft3.ac</path>
<nasal>
   <load>
   if (!contains(globals, "scenery")) globals["scenery"] = {};
   if (!contains(scenery, "LSZH")) scenery["LSZH"] = {};
   if (!contains(scenery.LSZH, "hangar")) scenery.LSZH["hangar"] = {};
   if (contains(scenery, "sharedDoor")) {
     scenery.LSZH.hangar[3] =
       { door :
         [scenery.sharedDoor.new("/scenery/LSZH/hangar[3]/door[0]", 30)
         ]
       };
   } else {
     scenery.LSZH.hangar[3] =
       { door :
         [aircraft.door.new("/scenery/LSZH/hangar[3]/door[0]", 30)
         ]
       };
   }
  </load>
  <unload>
   if (contains(scenery, "sharedDoor")) {
     scenery.LSZH.hangar[3].door[0].destroy();
   }
  </unload>
</nasal>

   <animation>
    <type>translate</type>
    <object-name>TorD</object-name>
    <object-name>FensterD</object-name>
    <property>/scenery/LSZH/hangar[3]/door[0]/position-norm</property>
    <factor>-30</factor>
    <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
    </axis>
   </animation>

   <animation>
    <type>translate</type>
    <object-name>TorC</object-name>
    <object-name>FensterC</object-name>
    <property>/scenery/LSZH/hangar[3]/door[0]/position-norm</property>
    <factor>-60</factor>
    <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
    </axis>
   </animation>

   <animation>
    <type>translate</type>
    <object-name>TorB</object-name>
    <object-name>FensterB</object-name>
    <property>/scenery/LSZH/hangar[3]/door[0]/position-norm</property>
    <factor>-90</factor>
    <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
    </axis>
   </animation>

   <animation>
    <type>translate</type>
    <object-name>TorA</object-name>
    <object-name>FensterA</object-name>
    <property>/scenery/LSZH/hangar[3]/door[0]/position-norm</property>
    <factor>-120</factor>
    <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
    </axis>
   </animation>

   <animation>
    <type>pick</type>
    <object-name>TorA</object-name>
    <object-name>TorB</object-name>
    <object-name>TorC</object-name>
    <object-name>TorD</object-name>
    <object-name>FensterA</object-name>
    <object-name>FensterB</object-name>
    <object-name>FensterC</object-name>
    <object-name>FensterD</object-name>
    <visible>true</visible>
    <action>
     <name>click</name>
     <button>0</button>
     <repeatable>false</repeatable>
     <binding>
      <command>nasal</command>
      <script>scenery.LSZH.hangar[3].door[0].toggle();</script>
     </binding>
    </action>
   </animation>

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-property>sim/rendering/static-lod/bare</max-property>
  </animation>

   <animation>
    <type>material</type>
    <object-name>Fenster1</object-name>
    <object-name>FensterA</object-name>
    <object-name>FensterB</object-name>
    <object-name>FensterC</object-name>
    <object-name>FensterD</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red> 0.8 </red>
      <green> 0.8 </green>
      <blue> 0.5 </blue>
    </emission>
  </animation>

   <animation>
    <type>material</type>
    <object-name>Fenster1</object-name>
    <object-name>FensterA</object-name>
    <object-name>FensterB</object-name>
    <object-name>FensterC</object-name>
    <object-name>FensterD</object-name>
    <condition>
      <less-than-equals>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </less-than-equals>
    </condition>
    <emission>
      <red>   0.0 </red>
      <green> 0.0 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

    <animation>
    <type>material</type>
    <object-name>TorA</object-name>
    <object-name>TorB</object-name>
    <object-name>TorC</object-name>
    <object-name>TorD</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red> 0.2 </red>
      <green> 0.2 </green>
      <blue> 0.1 </blue>
    </emission>
  </animation>   

    <animation>
    <type>material</type>
    <object-name>SR-Technics</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red> 0.8 </red>
      <green> 0.8 </green>
      <blue> 0.8 </blue>
    </emission>
  </animation>  

    <animation>
    <type>material</type>
    <object-name>Demag</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red> 0.5 </red>
      <green> 0.5 </green>
      <blue> 0.5 </blue>
    </emission>
  </animation> 

    <animation>
    <type>material</type>
    <object-name>Material1</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red> 0.1 </red>
      <green> 0.1 </green>
      <blue> 0.1 </blue>
    </emission>
  </animation>
  
</PropertyList>
